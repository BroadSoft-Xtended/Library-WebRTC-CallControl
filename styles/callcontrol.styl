.bdsft-webrtc
  .callControl
    background #FBFBFB
    border 1px solid #D6D6D6
    position absolute
    bottom 41px
    right auto
    top auto
    left 0px
    letter-spacing 5px
    z-index 100
    box-sizing content-box
    padding 0
    box-shadow none
    // display none
    // position relative
    // left 0px
    // top 0
    // height 75px
    // color #666666
    // font-family arial
    // font-size 18px
    // font-weight bold
    // height auto
    // display block
    .destination
      &::-webkit-input-placeholder
        color #04AFF0
        font-style italic
        padding-left 5px
        font-weight 400
    hr
      border none
      border-bottom 1px solid #3c3c3c
    input
      box-sizing border-box
      width 190px
      line-height 38px
      padding-left 14px
      padding-right 35px
      background #F3F3F3
      border none
      color #818181
      box-shadow inset 0 -3px 0 0 #03AFEF
    .historyButton
      font-size 16px !important
      padding-top 5px
      padding-bottom 5px
      outline none
      position absolute
      right: 10px;
      top: 11px;
      width: 25px;
      padding: 0;
      margin: 0;
      background: none;
      border: none;
      border-radius: 0;
      color: #B3B3B3;
      &.active
        color #04AFF0
    .control-bar
      margin-top 6px
      .main-button
        background #3DA005
        border-radius 14px
        width 70px
        padding 5px
        margin 0 3px
        margin-bottom 12px
        &:first-child
          margin-left 12px
        &:last-child
          margin-right 12px
          background #03AFEF
      a
        color #fff
        text-decoration none
        text-align center
        width 100%
        display inline-block
        font-size 14px
        font-weight normal
        letter-spacing 1
        span
          margin-right 5px

    .call
    .callAudio
      z-index 10
      display block
      position static
      top auto
      left auto

  .callControl.audioOnly:not(.offerToReceiveVideo)
    top 45px
    bottom auto

  .callControl.enableCallControl.callcontrol-shown
    {fadeInPopup}
    
  .callControl.calling .call,
  .callControl.calling .callAudio,
  .callControl:not(.connected) .call,
  .callControl:not(.connected) .callAudio,
  .callControl.enableCallControl:not(.callcontrol-shown)
    {fadeOut}
    
  .callControl.enableCallControl.connected .call,
  .callControl.enableCallControl.connected .callAudio
    {fadeIn}